@using TravelTripProje.Models.Classes
@model List<Blog>

<div class="box1-left">
    @foreach (var item in Model)
    {
        <div class="bot-img">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="bot-desc1">
            <p> <a href="~/blog/BlogDetay/@item.BlogId">@item.Description.Substring(0, 75)...</a> </p>
        </div>
        <div class="clear"></div>
    }
</div>