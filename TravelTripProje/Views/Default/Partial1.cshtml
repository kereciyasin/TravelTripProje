@using TravelTripProje.Models.Classes
@model List<Blog>



<div class="con-bot">

    @foreach (var x in Model)
    {

        <div class="left">
            <div class="bot-left">
                <img src="~/web/images/pic.jpg" alt="" />
            </div>
            <div class="left-text">
                <h4> @x.Title </h4>
                <span class="doller">@x.Date.ToString("dd.MM.yyyy")</span>
                <p>@x.Description.Substring(0,50)...</p>
                <p> <a href="~/blog/BlogDetay/@x.BlogId"> <span class="read">Devamini Oku >></span> </a> </p>
            </div>
        </div>
    }

    @Html.Action("Partial2", "Default")    

</div>


<div class="clear"></div>

</div>

